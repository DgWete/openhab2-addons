<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="ambientweather1400ip"
						  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
						  xmlns:thing="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0"
						  xsi:schemaLocation="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0 http://eclipse.org/smarthome/schemas/thing-description-1.0.0.xsd">

	<thing-type id="weatherstation">
		<label>Ambient Weather 1400 IP Weather Station</label>
		<description>Ambient Weather 1400 IP</description>

		<channels>
            <channel id="indoor_temp" typeId="temp_chan"/>
            <channel id="outdoor_temp" typeId="temp_chan"/>
            <channel id="indoor_humidity" typeId="humidity_chan"/>
            <channel id="outdoor_humidity" typeId="humidity_chan"/>
            <channel id="abs_pressure" typeId="pressure_chan"/>
            <channel id="rel_pressure" typeId="pressure_chan"/>
            <channel id="wind_direction" typeId="direction_chan"/>
            <channel id="wind_speed" typeId="speed_chan"/>
            <channel id="wind_gust" typeId="speed_chan"/>
            <channel id="solar_radiation" typeId="radiation_chan"/>
            <channel id="uv" typeId="uv_chan"/>
            <channel id="uvi" typeId="uv_chan"/>
            <channel id="hourly_rain" typeId="rain_chan"/>
            <channel id="daily_rain" typeId="rain_chan"/>
            <channel id="weekly_rain" typeId="rain_chan"/>
            <channel id="monthly_rain" typeId="rain_chan"/>
            <channel id="yearly_rain" typeId="rain_chan"/>
		</channels>

        <config-description>
            <parameter name="hostname" type="text" required="true">
                <context>network-address</context>
                <label>Ambient Weather 1400 IP hostname or IP</label>
                <description>Hostname or IP for the Ambient Weather 1400 IP</description>
            </parameter>
            <parameter name="scanrate" type="integer" required="false">
                <label>Scan Rate</label>
                <description>Scan Rate for the Ambient Weather 1400 IP</description>
                <default>60</default>
            </parameter>
        </config-description>
	</thing-type>

    <channel-type id="temp_chan">
        <item-type>Number</item-type>
        <label>Temperature</label>
        <description>Current Temperature</description>
        <category>Thermostat</category>
        <state pattern="%.1f Â°F" readOnly="true"/>
    </channel-type>
    <channel-type id="humidity_chan">
        <item-type>Number</item-type>
        <label>Humidity</label>
        <description>Current Humidity</description>
        <category>Thermostat</category>
        <state pattern="%.1f %" readOnly="true"/>
    </channel-type>
    <channel-type id="pressure_chan">
        <item-type>Number</item-type>
        <label>Pressure</label>
        <description>Current Pressure</description>
        <category>Thermostat</category>
        <state pattern="%.1f hg" readOnly="true"/>
    </channel-type>
    <channel-type id="direction_chan">
        <item-type>Number</item-type>
        <label>Wind Directioon</label>
        <description>Wind Direction</description>
        <category>Thermostat</category>
        <state pattern="%.1f" readOnly="true"/>
    </channel-type>
    <channel-type id="radiation_chan">
        <item-type>Number</item-type>
        <label>Solar Radiation</label>
        <description>Solar Radiation</description>
        <category>Thermostat</category>
        <state pattern="%.1f" readOnly="true"/>
    </channel-type>
    <channel-type id="uv_chan">
        <item-type>Number</item-type>
        <label>UV</label>
        <description>UV</description>
        <category>Thermostat</category>
        <state pattern="%.1f" readOnly="true"/>
    </channel-type>
    <channel-type id="speed_chan">
        <item-type>Number</item-type>
        <label>Wind Speed</label>
        <description>Wind Speed</description>
        <category>Thermostat</category>
        <state pattern="%.1f mph" readOnly="true"/>
    </channel-type>
    <channel-type id="rain_chan">
        <item-type>Number</item-type>
        <label>Rain Rate</label>
        <description>Rain Rate</description>
        <category>Thermostat</category>
        <state pattern="%.1f inches" readOnly="true"/>
    </channel-type>

</thing:thing-descriptions>
